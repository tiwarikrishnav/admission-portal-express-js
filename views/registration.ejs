<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="CSS/bootstrap.min.css" />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-6 mt-4 send" data-aos="fade-down">
          <h4
            class="mt-4 mb-4"
            style="
              font-family: unset;
              font-size: 1.5rem;
              margin-bottom: 0.5rem;
              font-weight: lighter;
              line-height: 1.2;
            "
          >
            Register Here
          </h4>
          <% if(msg.length >0){ %>
          <div class="alert alert-danger"><%= msg %></div>
          <% } %>
          <form
            id="formValidation"
            action="/insertuser"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="mb-3 mt-4" style="font-weight: 100">
              <input
                type="text"
                class="form-control"
                placeholder="Name*"
                name="n"
                id="usernames"
              />
            </div>
            <!--name-->
            <div class="mb-3 mt-4">
              <input
                type="email"
                class="form-control"
                placeholder="Email*"
                name="e"
              />
            </div>
            <!--password-->
            <div class="mb-3">
              <input
                type="password"
                class="form-control"
                placeholder="password*"
                name="p"
              />
            </div>
            <!--conform password-->
            <div class="mb-3">
              <input
                type="password"
                class="form-control"
                placeholder="Conform password*"
                name="cp"
              />
            </div>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <link
              href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
              rel="stylesheet"
            />

            <div class="container mt-4">
              
              <div class="mt-3">
                <input type="file" name="images" class="form-control">
              </div>
            </div>
            <div class="d-md-flex justify-content-md-center mt-4">
              <button class="btn bg-warning btn-lg text-light" type="submit">
                Submit
              </button>
            </div>
            <!--butten-->
          </form>
        </div>
        <!--col-md-6 end-->
        <div class="col-md-5 mt-4 ms-1">
          <img src="Image/University of California logo.png" alt="" />
        </div>
      </div>
    </div>
    <!-- Code injected by live-server -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="js/custom.js"></script>
  </body>
</html>
